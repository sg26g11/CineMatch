
//-Modal error form //
.modal-form-errors.modal.hide
		div.modal-header
				//-'X' button to dismiss //
				button.close(data-dismiss='modal') x
				h3 Whoops!
		div.modal-body
				p.subheading It looks like there was a problem.
				ul
		div.modal-footer
				//-'OK' submit to dismiss //
				button(data-dismiss="modal").btn.btn-warning OK
