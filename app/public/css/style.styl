.gradient
	background rgb(40, 40, 40)
	background -moz-radial-gradient(center, ellipse cover,  rgba(255, 255, 255, 1) 0%, rgba(40, 40, 40, 1) 100%) /* FF3.6+ */
	background -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,rgba(255, 255, 255, 1)), color-stop(100%,rgba(40, 40, 40, 1))) /* Chrome,Safari4+ */
	background -webkit-radial-gradient(center, ellipse cover,  rgba(255, 255, 255, 1) 0%,rgba(40, 40, 40, 1) 100%) /* Chrome10+,Safari5.1+ */
	background -o-radial-gradient(center, ellipse cover,  rgba(255, 255, 255, 1) 0%,rgba(40, 40, 40, 1) 100%) /* Opera 12+ */
	background -ms-radial-gradient(center, ellipse cover,  rgba(255, 255, 255, 1) 0%,rgba(40, 40, 40, 1) 100%) /* IE10+ */
	background radial-gradient(center, ellipse cover,  rgba(255, 255, 255, 1) 0%,rgba(40, 40, 40, 1) 100%) /* W3C */

